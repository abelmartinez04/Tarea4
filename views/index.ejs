<%- include("partials/header", { title: "Inicio", activePage: "inicio", usuario }) %>

<div class="flex-grow-1 d-flex align-items-center justify-content-center bg-light">

    <div class="text-center py-5">

        <h1 class="fw-bold text-primary mb-3">
            Bienvenido a la Plataforma de Cursos Cortos
        </h1>

        <p class="text-muted mb-4">
            Administra, consulta y gestiona cursos de forma sencilla.
        </p>

        <div class="d-flex justify-content-center gap-4 flex-wrap">

            <!-- Botón para ver cursos -->
            <a href="/cursos" class="btn btn-primary btn-lg shadow-sm px-4 py-3">
                <i class="bi bi-journal-bookmark-fill me-2"></i> Ver Cursos
            </a>

            <% if (usuario) { %>
            <!-- Solo si está logueado -->
            <a href="/cursos/nuevo" class="btn btn-success btn-lg shadow-sm px-4 py-3">
                <i class="bi bi-plus-circle me-2"></i> Crear Curso
            </a>
            <a href="/logout" class="btn btn-outline-danger btn-lg shadow-sm px-4 py-3">
                <i class="bi bi-box-arrow-right me-2"></i> Cerrar Sesión
            </a>

            <% } else { %>
            <!-- Si NO está logueado -->
            <a href="/login" class="btn btn-outline-primary btn-lg shadow-sm px-4 py-3">
                <i class="bi bi-box-arrow-in-right me-2"></i> Iniciar Sesión
            </a>
            <% } %>

        </div>
    </div>
</div>

<%- include("partials/footer") %>
